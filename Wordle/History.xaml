<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wordle.History"
             Title="PlayerHistory">
    <StackLayout>
        <ListView x:Name="GameHistoryList">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Vertical">
                            <Label Text="{Binding playerName}" />
                            <Label Text="{Binding correctWord, StringFormat='Word: {0}'}" />
                            <Label Text="{Binding guessTaken, StringFormat='Guesses: {0}'}" />
                            <Label Text="{Binding timeStamp, StringFormat='{0:dd/MM/yyyy}'}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>